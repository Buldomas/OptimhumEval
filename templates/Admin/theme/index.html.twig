{% extends 'admin/base.html.twig' %}

{% block title %}Administration des thèmes{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des thèmes</h1>

    <table class="table table-hover">
        <thead>
            <tr class="table-dark text-center">
                <th scope="col">Titre</th>
                <th scope="col">Sous Titre</th>
                <th scope="col" class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for theme in themes %}
            <tr>
                <th scope "row">{{ theme.titre }}</th>
                <td>{{ theme.stitre }}</td>
                <td  class="text-right">
                    <a href="#" class="btn btn-primary mb-1"><i class="fas fa-pen"></i></a>
                    <a href="#" class="btn btn-success mb-1"><i class="fas fa-plus-square"></i></a>
                    <a href="#" class="btn btn-danger mb-1"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
