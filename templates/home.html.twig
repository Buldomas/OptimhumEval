{% if app.user %}
    {% set niveau = app.user.getNiv().getNiveau() %}
{% endif %}
{% extends 'base.html.twig' %}

{% block title %}Optim'hum Evaluation{% endblock %}

{# Commentaires #}
{% block body %}
<div class="container">
    <div class="container">
            <h1 class="text-center">Bonjour</h1>
            <h4 class="text-center">Vous êtes sur notre site d'évaluation des formations</h4>
    </div>
    {% if app.user %}
    <div class="row text-center mt-4 mb-5">
        {% if niveau > 9 %}
            <div class="col-md-6 text-center mb-3">
                <a path="#" class="btn btn-secondary">Répondre à mes questionnaires</a>
            </div>
        {% else %}
            <div class="col-md-6 text-center color">
                <a path="#" class="btn btn-secondary">Accéder à l'administration</a>
            </div>
        {% endif %}
    </div>
    {% endif %}
    <div class="container">
        <h1 class="text-center">Nos différents thèmes</h1>
        <div class="row mt-3">
            {% for i in 1..3 %}
                <div class="col-md-4">
                    <div class="card bg-light mb-3">
                        <div class="card-header text-center">
                            Thème N° {{ i }}
                        </div>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title text-center">Description du thème {{ i }}</h4>
                        <p class="card-text">Lorem ipsum dolor, sit amet consectetur adipisicing elit. Sequi molestias nulla consequuntur quia officiis, ipsum deserunt, possimus quidem totam sunt nesciunt mollitia repellendus neque expedita alias ab, qui voluptatibus recusandae?</p>

                    </div>
                </div>
            {% endfor %}
        </div>    
    </div>
</div>
{% endblock %}
