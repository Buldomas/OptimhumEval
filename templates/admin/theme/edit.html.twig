{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'un thème{% endblock %}
{% form_theme form 'admin/theme/_collection.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-3">Modification du thème : {{ theme.titre }}</h1>

        {{ form_start(form) }}

        {{ form_widget(form) }}
        
        <button type="submit" class="btn btn-primary">Enregistrer les Modifications</button>
        <a href="{{ path('admin_themes_index') }}" class="btn btn-secondary">Abandonner</a>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/theme.js"></script>
{% endblock %}